<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/theme_color_code">

        <ImageView
            android:id="@+id/result_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="@dimen/dimen_15dp"
            android:saveEnabled="true"
            android:src="@drawable/ic_back_arror_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_toRightOf="@+id/result_back"
            android:text="Contact Us"
            android:textColor="@color/color_white"
            android:textSize="18dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/profileDetails_ivProfilePhoto"
                android:layout_width="100sp"
                android:layout_height="100dp"
                android:src="@drawable/img_default"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/profileDetails_tvVendorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/color_white"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profileDetails_tvEmail"
                        android:layout_width="match_parent"
                        android:text="Email ID:"
                        android:textSize="@dimen/sub_heading"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/profileDetails_tvUserID"
                        android:layout_width="match_parent"
                        android:text="User ID:"
                        android:visibility="gone"
                        android:textSize="@dimen/sub_heading"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/profileDetails_tvPhoneNo"
                        android:layout_width="match_parent"
                        android:text="Phone No:"
                        android:textSize="@dimen/sub_heading"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>

</LinearLayout>