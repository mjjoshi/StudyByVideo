<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme_color_code">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:clickable="true"
            android:padding="6dp"
            android:saveEnabled="true"
            android:src="@drawable/ic_back_arror_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:layout_toRightOf="@+id/back_btn"
            android:singleLine="true"
            android:text="Test Series"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Time"
            android:textColor="@color/color_white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/qll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Question bhdjdkshdhsdhsvdvsfvhsvdvsa ?"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/resultText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/green"
                        android:textSize="30sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/q_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/qll"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/optionll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q_image"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_option1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@mipmap/bg_img_card"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_option_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="8sp"
                                android:text="2"
                                android:textColor="#000000"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/isSelected_option1"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_correct"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/option_a_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@+id/qll"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_option2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@mipmap/bg_img_card"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_option2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="8sp"
                                android:text="2"
                                android:textColor="#000000"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/isSelected_option2"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_correct"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/option_b_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@+id/qll"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_option3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@mipmap/bg_img_card"
                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_option3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="8sp"
                                android:text="2"
                                android:textColor="#000000"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/isSelected_option3"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_correct"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/option_c_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@+id/qll"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_option4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@mipmap/bg_img_card"
                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_option4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="8sp"
                                android:text="2"
                                android:textColor="#000000"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/isSelected_option4"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_correct"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/option_d_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@+id/qll"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_explain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="show Explination"
                        android:textColor="@color/orange_text"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/explll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/optionll"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Answer Explanation"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="8sp"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/exp_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@+id/qll"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/next"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/status_bar_blue"
                android:gravity="center"
                android:text="SKIP"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/nextTxt"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/status_bar_blue"
                android:gravity="center"
                android:text="SUBMIT"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/status_bar_blue"
                android:gravity="center"
                android:text="Review"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>
