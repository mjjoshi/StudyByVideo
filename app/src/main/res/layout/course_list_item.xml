<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:background="@mipmap/bg_img_card"
         android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/isSelected"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1.5"
                        android:background="@color/color_white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/txt_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:maxLines="2"
                                android:text="Introduction &amp; Cell Membrane"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sub_heading"
                                android:textStyle="bold">

                            </TextView>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/txt_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Dr Ashis"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/sub_heading"
                                android:textStyle="bold">

                            </TextView>


                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text="4.8"
                    android:textColor="@color/black">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:max="1"
                        android:numStars="1"
                        android:rating="1.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/isSelected"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_correct" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/orange_text">

                <TextView
                    android:id="@+id/txt_q_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question Bank"
                    android:padding="6sp"
                    android:gravity="center"

                    android:textColor="@color/color_white">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llvideo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/theme_color_code">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:padding="6sp"
                    android:gravity="center"

                    android:textColor="@color/color_white">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/llnotes"
                android:background="@color/status_bar_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:gravity="center"
                    android:padding="6sp"
                    android:textColor="@color/color_white">

                </TextView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
