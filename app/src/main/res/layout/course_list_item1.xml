<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="@drawable/ripple"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8dp"
            android:orientation="vertical"
            android:padding="@dimen/dimen_2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_180dp"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_180dp"
                    android:src="@drawable/img_default" />

                <ImageView
                    android:id="@+id/ivPlay"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black_transparent"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_5dp">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dimen_1dp"
                        android:max="1"
                        android:numStars="1"
                        android:rating="1.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:layout_toLeftOf="@+id/ratingBar"
                        android:text="4.8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sub_heading" />

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sub_heading"
                        tools:text="Introduction &amp; Cell Membrane" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_des"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/sub_heading"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Dr Ashis jdsgjggsdj gsdgjgsgdsgjsd hjgsjhgdjsg fsdu yjgsdh skhfksdf sfkhsdfj sfdfskdhhdfjk fkdjskjs ksfjd fsdjkfdhskfjdsfdshkj" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dimen_3dp">

                    <ImageView
                        android:id="@+id/ivQuestionBank"
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:background="@color/transparent"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@drawable/quest" />

                    <ImageView
                        android:id="@+id/ivNotes"
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:background="@color/transparent"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@drawable/notes" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/lock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="true"
            android:background="#50000000">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/lock">

            </ImageView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>